version: '3.8'

services:
  # Add resource limits for all services to prevent resource exhaustion
  auth-service:
    deploy:
      resources:
        limits:
          memory: 1G
          cpus: '0.5'
          
  user-service:
    deploy:
      resources:
        limits:
          memory: 1G
          cpus: '0.5'
          
  note-service:
    deploy:
      resources:
        limits:
          memory: 1G
          cpus: '0.5'
